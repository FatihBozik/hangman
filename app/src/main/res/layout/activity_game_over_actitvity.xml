<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.example.fatih.hangman.GameActivity"
    android:background="@drawable/background_base">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:id="@+id/hangmanImage"
        android:src="@drawable/game_over"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/layoutSaveScore"
        android:layout_marginBottom="10dp"
        android:background="@color/fatih"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="131dp"
            android:layout_height="49dp"
            android:text="Puanı kaydet"
            android:id="@+id/save"
            android:layout_alignBottom="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:layout_toEndOf="@+id/textView"
            android:layout_marginLeft="15dp"
            android:background="@color/light_blue"
            android:onClick="saveScore" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:hint="Adınızı girin" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="false"
        android:layout_alignWithParentIfMissing="false"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/hangmanImage"
        android:layout_marginTop="140dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textViewPoints"
            android:layout_gravity="bottom"
            android:textSize="25dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=" Puan"
            android:id="@+id/textView3"
            android:layout_marginRight="5dp"
            android:textSize="25dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Oyunu kaybettiniz"
        android:id="@+id/textView"
        android:textColor="@color/primary_material_dark"
        android:textSize="25dp"
        android:textIsSelectable="false"
        android:textStyle="italic"
        android:layout_below="@+id/linearLayoutGameOver"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/word"
        android:textIsSelectable="false"
        android:textColor="@color/blue"
        android:textSize="25dp"

        android:textStyle="bold|italic"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayoutGameOver"
        android:background="@color/fatih"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false">

        <Button
            android:layout_width="131dp"
            android:layout_height="49dp"
            android:text="Menüye Dön"
            android:layout_alignBottom="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:layout_toEndOf="@+id/textView"
            android:layout_marginRight="20sp"
            android:onClick="returnMenu"
            android:background="@color/light_blue"
            android:layout_marginLeft="15dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="131dp"
            android:layout_height="49dp"
            android:text="Tekrar Oyna"
            android:onClick="rePlay"
            android:nestedScrollingEnabled="false"
            android:background="@color/light_blue"
            android:layout_marginRight="30sp" />

    </LinearLayout>

</RelativeLayout>
