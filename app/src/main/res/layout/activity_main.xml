<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/background_base">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="134dp"
            android:layout_height="49dp"
            android:text="@string/single_player"
            android:id="@+id/button_singleplayer"
            android:onClick="startSinglePlayerGame"
            android:background="@drawable/rounded_corner"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:typeface="normal"
            android:layout_below="@+id/button_score"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_width="134dp"
            android:layout_height="49dp"
            android:text="@string/multi_player"
            android:id="@+id/button_multiplayer"
            android:onClick="startMultiPlayerGame"
            android:background="@drawable/rounded_corner"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:typeface="normal"
            android:layout_below="@+id/button_singleplayer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_width="134dp"
            android:layout_height="49dp"
            android:text="@string/score"
            android:id="@+id/button_score"
            android:onClick="openScores"
            android:background="@drawable/rounded_corner"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:typeface="normal"
            android:layout_above="@+id/linearLayout"
            android:layout_alignLeft="@+id/button_singleplayer"
            android:layout_alignStart="@+id/button_singleplayer"
            android:layout_marginTop="10dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/hangman"
        android:id="@+id/textView_hangman"
        android:textSize="35dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginBottom="36dp"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
